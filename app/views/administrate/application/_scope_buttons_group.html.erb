<nav class="pagination" style="text-align: left; margin-bottom: 5px; font-size: 85%">
  <span class="page" style="margin: 0.2em"><%= translated_scope scope_buttons_group, page.resource_name %>:</span>
    <% page.scope_names(scope_buttons_group).each do |scope| %>
      <span style="margin: 0.2em" class="page <%= page.scoped_with?(scope) ? 'current' : '' %>">
      <% if page.scoped_with?(scope) %>
        <%= link_to translated_scope(scope, page.resource_name),
                    { search: page.term_without_scope(scope) },
                    class: "button-group-item active" %>
      <% else %>
        <%= link_to translated_scope(scope, page.resource_name),
                    { search: page.term_with_scope(scope) },
                    class: "button-group-item" %>
      <% end %>
      </span>
    <% end %>
  </li>
</nav>
